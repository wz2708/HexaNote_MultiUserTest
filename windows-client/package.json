{
  "name": "windows-client",
  "private": true,
  "version": "0.0.1",
  "description": "HexaNote Multi-User Windows Client",
  "author": "HexaNote Team",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:win": "tsc && vite build && electron-builder --win",
    "build:no-sign": "tsc && vite build && electron-builder --config.win.sign=null",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.hexanote.windows-client",
    "productName": "HexaNote",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "signingHashAlgorithms": null,
      "sign": null,
      "signDlls": false,
      "signAndEditExecutable": false,
      "certificateFile": null,
      "certificatePassword": null,
      "verifyUpdateCodeSignature": false
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "build/icon.ico",
      "node_modules/**/*"
    ]
  },
  "dependencies": {
    "axios": "^1.6.8",
    "clsx": "^2.1.0",
    "framer-motion": "^11.0.24",
    "lucide-react": "^0.363.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.22.3",
    "rehype-katex": "^7.0.0",
    "remark-math": "^6.0.0",
    "tailwind-merge": "^2.2.2"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "electron": "^29.1.6",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.5"
  }
}
