# HexaNote Backend Configuration
# Copy this file to .env and update the values as needed

# Application
APP_NAME=HexaNote
APP_VERSION=1.0.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./data/hexanote.db

# Weaviate
WEAVIATE_URL=http://weaviate:8080
WEAVIATE_API_KEY=user-a-key
WEAVIATE_TIMEOUT_INIT=30
WEAVIATE_TIMEOUT_QUERY=600
WEAVIATE_TIMEOUT_INSERT=120

# Ollama
OLLAMA_URL=http://ollama:11434
OLLAMA_EMBEDDING_MODEL=mxbai-embed-large:latest
OLLAMA_GENERATION_MODEL=llama3.2:1b

# Authentication (single-user)
SECRET_KEY=your-secret-key-change-in-production-to-something-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
SIMPLE_PASSWORD=hexanote

# CORS (allow all for local network)
CORS_ORIGINS=["*"]

# Sync
WEBSOCKET_HEARTBEAT_INTERVAL=30
